<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://sofastack.io/schema/sofaboot"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://sofastack.io/schema/sofaboot http://sofastack.io/schema/sofaboot.xsd"
       default-autowire="byName">
    <!-- 服务调用拦截器配置 -->
    <sofa:rpc-global-filter class="com.example.demo.service.filter.TestSofaFilter"/>
    <bean id="testSofaFilter" class="com.example.demo.service.filter.TestSofaFilter"/>

    <bean id="sofaDemoService" class="com.example.demo.service.impl.SofaDemoServiceImpl"/>
    <sofa:service ref="sofaDemoService" interface="com.example.demo.service.SofaDemoService">
        <sofa:binding.dubbo/>
    </sofa:service>


</beans>